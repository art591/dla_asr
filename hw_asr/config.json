{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave":
    [
      {"type" : "Gain", "args" : {}},
      {"type" : "Pitch", "args" :
        {
          "sample_rate" : 16000,
          "min_transpose_semitones" : -4,
          "max_transpose_semitones": 4
        }
      }
    ],
    "spectrogram": [{"type" : "FrequencyMasking", "args" : {"freq_mask_param" :  15}},
                    {"type" : "TimeMasking", "args" : {"time_mask_param" :  35}}]
  },
  "arch": {
    "type": "QuartznetSmall",
    "args": {
      "n_feats": 128
    }
  },
  "data": {
    "train": {
      "batch_size": 1,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 100,
            "limit" : 1
          }
        }
      ]
    },
    "val": {
      "batch_size": 20,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 300
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 1e-1
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size" : 5000
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 1000,
    "grad_norm_clip": 10
  }
}
